@model IEnumerable<ContractClaimSystemMvc.Models.TblUser>

@{
    ViewData["Title"] = "View Users";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">User ID</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Claims Submitted</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.TblClaims.Count()</td>  
                <td>
                    <a href="@Url.Action("Details", "User", new { id = user.UserId })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
